---
import { Icon } from 'astro-icon/components';

const { errors = [] } = Astro.props;
---
<div class="flex mb-3">
    <div class="text-error">
        <ul role="list" class="list-disc pl-5 space-y-1">
            {errors.map((error) => (
                <li>{error}</li>
            ))}
        </ul>
    </div>
</div>