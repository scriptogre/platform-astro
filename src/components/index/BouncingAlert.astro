---
interface Props {
  href: string;
  message: string;
}
const { message, href } = Astro.props;
---

<a
  {href}
  class="flex animate-bounce cursor-pointer flex-col items-center justify-center"
>
  <span class="mb-4 text-xl md:mb-6">
    {message}
  </span>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-5 md:h-6 md:w-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
  </svg>
</a>
