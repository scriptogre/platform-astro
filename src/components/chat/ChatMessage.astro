---
import { Image } from 'astro:assets';

interface Props {
  sender: 'user' | 'gpt'
  text: string
  id?: string
}

const { id, sender, text } = Astro.props

---

<div class:list={[ 'chat', { 'chat-end': sender === 'user', 'chat-start': sender === 'gpt' } ]}>
    <div class="chat-image avatar">
        <div class="w-10 rounded-full">
            <Image src={sender === 'user' ? '/avatar-default.webp' : '/avatar-10x-giga-chad.webp'} alt={sender === 'user' ? 'User Avatar' : 'Giga Chad Avatar'} width="40" height="40" />
        </div>
    </div>
    <div class:list={[ 'flex chat-bubble', { 'bg-base-100/60': sender === 'gpt'} ]}>
        {text}
        <slot/>
    </div>
</div>

