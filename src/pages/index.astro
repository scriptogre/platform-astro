---
import Layout from '../layouts/Layout.astro';

import Hero from '../components/home/Hero.astro';
import NewsTag from "../components/home/NewsTag.astro";
import BouncingAlert from "../components/home/BouncingAlert.astro";
import Announcement from "../components/home/Announcement.astro";
import Chat from "../components/chat/Chat.astro";
import ChatMessage from "../components/chat/ChatMessage.astro";
import Excuses from "../components/chat/Excuses.svelte";

import { getFirstLesson } from "../utils.ts";
const firstLesson = await getFirstLesson();
---

<Layout title="Your Path To Full Stack Python">
  <div class="flex items-center justify-center mt-8 sm:mt-16 md:mt-20 lg:mt-24 xl:mt-28">
    <NewsTag href={`/course/${firstLesson.slug}`} message="The first module is here!  🎉"/>
  </div>

  <div class="flex flex-col lg:flex-row items-center justify-center">
    <Hero mainTitle="The Pyoneer Project"
          subTitle="For the ambitious, by the ambitious"
          description="Learn Full-Stack Engineering the way I wish I had."
          additionalText="You won't get these tips from ChatGPT" />

    <div id="chat-section" class="flex flex-col justify-center items-start p-6">
      <Chat id="chat-container">
        <ChatMessage sender="gpt" text="Hey chief. I'm here to help you become a 10x engineer."/>
        <ChatMessage sender="user" text="I'm not ready to become a 10x engineer..."/>
      </Chat>

      <Excuses chatSelector="#chat-container" buttons={[
        { label: "💰 No Money", message: "I'm not sure if I can afford it." },
        { label: "🕐 No Time", message: "I don't think I'll have the time."},
        { label: "🚫 No Talent", message: "I was not made to be a programmer."}
      ]} client:load />
    </div>
  </div>

  <div class="flex flex-col justify-center items-center mt-20 xl:mt-32">
    <BouncingAlert href="#news-section" message="Huge news! 🙏" />
  </div>

  <div id="news-section" class="h-screen grid place-content-center text-center py-6">
    <Announcement
        href={`/course/${firstLesson.slug}`}
        title="The first module is here! 🎉"
        description="Press the golden card to check it out!" />
  </div>
</Layout>